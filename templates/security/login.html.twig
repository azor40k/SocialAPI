{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <span>default user: axelcarandang@hotmail.fr</span><br>
    <span>password: 123456</span><br>
    <span class="text-danger">but useless for this API test</span><br>
    <span class="text-primary">Use the Instagram Login Button</span><br><br>

    <div class="container">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
        autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
   
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button> <a class="btn btn-secondary" href="{{ path('app_register') }} ">or register</a> <br><br>

        <a href=" {{ path('instagram') }}" class="btn btn-block btn-social btn-lg btn-instagram">Log in with Instagram 
        <i class="fa fa-instagram"></i></a>
    </div>

    </div>
</form>
{% endblock %}